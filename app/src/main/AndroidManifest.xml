<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ap.android.alarm" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainAlarmActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlarmSettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainAlarmActivity"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".AddAlarmActivity"
            android:label="Add Alarm Activity"
            android:parentActivityName=".MainAlarmActivity"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".AlarmReceiverActivity"
            android:label="Alarm Receiver Activity"
            android:parentActivityName=".MainAlarmActivity" >
        </activity>
        <activity
            android:name=".UpdateAlarmActivity"
            android:label="Edit Alarm Activity"
            android:parentActivityName=".MainAlarmActivity"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

    </application>

</manifest>
